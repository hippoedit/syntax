<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="syntax.xslt"?>
<XMLConfigSettings>
  <FILEINFO author="HippoEDIT.com" type="LangSpec"/>
  <SYNTAX id="vbs" name="Visual Basic Script" inherit="basic" inherit_url="basic_spec.xml" version="1.1">
    <SPECIFICATION>
      <Scripting id="VBScript"/>      
      <FilePattern mask="*.vbs"/>
    </SPECIFICATION>
    <LABELS>
      <Label group="Variable" match="^\s*(?:Dim|Set)\s+(\w+)" name="\1" descr="\1" image="6" navigation="false" context="variable" style="variable" highlight="\1" visible="false"/>
      <Label group="Function" match="(\w+)\(" name="\1" descr="\1" navigation="false" context="function_call" style="functions" highlight="\1" visible="false"/>      
    </LABELS>    
    <STYLES>
      <Style id="comment" extend="true">
        <Blocks>
          <Block open="'" close="\n"/>
        </Blocks>
      </Style>
      <Style id="objects" extend="true">
