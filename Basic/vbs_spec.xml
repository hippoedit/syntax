          <Keyword text="Session"/>
          <Keyword text="WScript"/>
        </Keywords>
      </Style>
      <Style id="functions" extend="true">
        <Keywords>
          <Keyword text="Echo"/>
        </Keywords>
      </Style>
      <Style id="constants" extend="true">
