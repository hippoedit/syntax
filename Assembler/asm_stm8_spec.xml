        </Keywords>
      </Style>

      <Style id="value_assigment" name="Value assignment directives" image="6" bold="0" italic="0" underline="0" clr="Keyword2" bkclr="#FFFFFFFF">
        <!-- Value assignment and cross named directives -->
        <Keywords>
          <Keyword text="equ"/>
          <Keyword text="set"/>
