      <!-- Conditional assembly -->
      <Style id="symbctr" name="Symbol control directives" text="1" bold="0" italic="0" underline="0" clr="Keyword5" bkclr="#FFFFFFFF">
        <Keywords>
            <Keyword text="if"/>
            <Keyword text="ifc"/>
            <Keyword text="ifge"/>
            <Keyword text="ifgt"/>
