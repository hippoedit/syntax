      <!-- Sections e.t.c. -->
      <Style id="sections" name="Section control directives" text="1" bold="0" italic="0" underline="0" clr="Keyword3" bkclr="#FFFFFFFF">
        <Keywords>
          <Keyword text="section"/>
          <Keyword text="switch"/>
          <Keyword text="bsct"/>
        </Keywords>
      </Style>
    </STYLES>
  </SYNTAX>
</XMLConfigSettings>