            <Keyword text="endif"/>
            <Keyword text="endc"/>
        </Keywords>
      </Style>
      <!-- Assembler control directives -->
      <Style id="assmctr" name="Assembler control directives" text="1" bold="0" italic="0" underline="0" clr="Keyword4" bkclr="#FFFFFFFF">
        <Keywords>
          <Keyword text="align"/>
