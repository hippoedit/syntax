      </Style>

      <Style id="ddefalloc_control" name="Data definition or allocation directives" image="6" bold="0" italic="0" underline="0" clr="Keyword3" bkclr="#FFFFFFFF">
        <!-- Data definition or allocation directives -->
        <Keywords>
          <Keyword text="DC"/>
          <Keyword text="DC.B"/>
          <Keyword text="DC.W"/>
          <Keyword text="DC.L"/>
