			<Delimiters override="true">&quot;'#</Delimiters>
			<Words init="A-Za-z_А-Яа-я_" override="true">0-9A-Za-zА-Яа-я_</Words>
			<WrapBy override="true">(),</WrapBy>
			<Numbers>-+0-9.</Numbers>
